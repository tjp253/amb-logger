<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.nottingham.eaxtp1.CradleRideLogger.MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_weight=".05"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/versionView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/id_placeholder" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="top|clip_vertical|start"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <TextView
        android:id="@+id/instructDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="140dp"
        android:text="@string/instruct_placeholder"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_Record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:text="@string/button_Start" />


    <TextView
        android:id="@+id/orientDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".15"
        android:rotation="0"
        android:text="@string/orient_info"

        android:textAlignment="center"
        android:textSize="24sp" />

