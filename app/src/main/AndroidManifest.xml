<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    package="uk.ac.nottingham.eaxtp1.CradleRideLogger">

    <uses-feature android:name="android.hardware.screen.portrait" />

    <!-- Permissions for the recording -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permissions for upload and JobScheduler -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Permissions for the Broadcast Receiver -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission for recording sound -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- buttonTint below is for the Disclosure Checkbox -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        app:buttonTint="#000000"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"> <!-- Suppresses a couple of warnings. -->

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".NetworkReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>

        <service android:name=".UploadService" />
        <service android:name=".MovingService" />
        <service android:name=".AudioService" />
        <service android:name=".GPSService" />
        <service android:name=".LoggingService" />
        <service android:name=".IMUService" />
        <service
            android:name=".UploadJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!--suppress AndroidDomInspection -->
        <activity
            android:name=".AmbSelect"
            android:enabled="${isAmb}" />

        <receiver
            android:name=".BootReceiver"
            android:enabled="${isAmb}"
            android:exported="true">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />

                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <service android:name=".GPSTimerService" />
    </application>

</manifest>